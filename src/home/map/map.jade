#map-view.container(ng-controller="MapCtrl")
    .row
        .col-md-5
            h3.section-title.center 
                i.fa.fa-globe
                span.margin-left Les villes partenaires 
                a.partnership-link(href='mailto:contact@marchambul.com?Subject=Bonjour%20Marchambul') (devenir partenaire)
            #map
        .col-md-7
            #round-list
                h3.section-title.center 
                    i.fa.fa-calendar
                    span.margin-left Les prochaines tournées
        
                ul.list-rounds
                    li.round-item
                        p Venez gouter aux bons légumes du Clos Renaud. Cette semaine : patates, carottes, haricots verts et frites!
                        .profil
                            img.profile-img.img-circle(src="img/temp/yann.jpg")
                            span Yann le vendeur de rêve
                        .infos(ng-hide="toggled")
                            .info-line
                                i.fa.fa-fw.fa-map-marker 
                                span.icon-label place de la République, Rennes
                            .info-line
                                i.fa.fa-fw.fa-clock-o
                                span.icon-label 03 mars 2016 : 15h - 18h
                        hr.small-margin(ng-hide="toggled")
                        a.card-bottom-link(ng-click="toggled=!toggled", ng-hide="toggled")
                            i.fa.fa-eye
                            span.icon-label voir toutes les tournées de Yann
                        table.table.rounds-table(ng-if="toggled")
                            thead
                                tr
                                    td 
                                        i.fa.fa-fw.fa-map-marker
                                        span.icon-label Où
